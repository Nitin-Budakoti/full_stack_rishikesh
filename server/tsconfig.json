{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                   // Modern JS target
    "module": "commonjs",                 // For Node.js
    "rootDir": "./src",                   // Your TypeScript source folder
    "outDir": "./dist",                   // Compiled output folder
    "esModuleInterop": true,              // Enables default import compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,                       // Enable all strict type-checking options
    "skipLibCheck": true                  // Skip checking node_modules type declarations
  },
  "include": ["src"],                     // Only compile files in src/
  "exclude": ["node_modules", "dist"]     // Ignore these folders
}
